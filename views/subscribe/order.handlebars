                                <input type="text"
                                       class="form-control"
                                       id="city"
                                       placeholder="street city">
                            </div>

                            <div class="form-group">
                                <label for="postalZip">Region</label>
                                <input type="text"
                                       class="form-control"
                                       id="region"
                                       placeholder="province/state">
                            </div>

                            <div class="form-group">
                                <label for="postalZip">Postal/Zip Code</label>
                                <input type="text"
                                       class="form-control"
                                       id="postalZip"
                                       placeholder="postal code/zip code">
                            </div>


                            <button type="submit"
                                    class="btn btn-primary"
                                    id="btnBillingInfo">Next</button>
                        </form>
                    </div>
                    <!-- END shipping info panel -->

