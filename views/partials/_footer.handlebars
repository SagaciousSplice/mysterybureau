<script>

    $(document).ready(() => {
        console.log('jQuery ready');

        $('#goBack').on('click', (e) => {
            console.log('clicking back button made');
            window.history.back();
        });

        $('#btnBackDash').on('click', (e) => {
            window.history.back();
        });

        $('.nav-tabs a[href="#contactInfo]').tab('show');

        //form that holds shipping address
        let $shippingForm = document.getElementById('shippingForm');
        let $shippingFormDivs = document.getElementsByClassName(' shipping-form-group');
        let $shippingUpdateBtn = document.getElementById('btnShippingInfo');

        //toggle function to show or hide the shipping info for for special deliveries
        $('#special').on('click', () => {
            $($shippingFormDivs).hide();
            $($shippingUpdateBtn).hide();
        });

        $('#normal').on('click', () => {
            $($shippingFormDivs).show();
            $($shippingUpdateBtn).show();
        });

        let $shippingInfoPanel = document.getElementById('shippingInfo');

        //buttons to navigate to the next panel and also updating the data
        $('#reviewOrder').on('click', (e) => {
            document.getElementbyid('btnBillingNext').click();

        });

        $('#btnBillingNext').on('click', (e) => {
            e.preventDefault();
            $('.nav-tabs a[href="#shippingInfo"]').tab('show');
            window.scrollTo(0, 0);
        });

        $('#btnShippingNext').on('click', (e) => {
            e.preventDefault();
            $('.nav-tabs a[href="#reviewOrder"]').tab('show');
            window.scrollTo(0, 0);
        });

        $('#eventList').on('click', (e) => {
            console.log('imageclicked');
            document.getElementById('imageModal').style.display = "block";
        });

        $('.imgClose').on('click', (e) => {
            document.getElementById('imageModal').style.display = "none";
        });


        function goBack() {
            window.history.back();
        }

        //function createEventDiv = () => {
